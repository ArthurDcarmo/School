@model Disciplina

@{
    ViewData["Title"] = "Create Page";
}

<div class="text-center">
    <h1 class="display-4">Adicionar Disciplina</h1>
    <form asp-controller="Disciplina" asp-action="Create" method="post">
        <div class="mb-3">
        <label for="nome" class="form-label">Nome da disciplina</label>
        <input type="text" asp-for="Nome" class="form-control" id="nome" placeholder="Nome">
        <button type="submit" class="btn btn-primary">Criar</button>
        </div>
    </form>


</div>
