@model Matricula

@{
    ViewData["Title"] = "Create Page";
}

<div class="container">
    <h2 class="my-4 text-center">Cadastrar Matrícula</h2>

    <form asp-controller="Matricula" asp-action="Create" method="post">
        <div class="mb-3">
            <label asp-for="AlunoID" class="form-label">Aluno</label>
            <select asp-for="AlunoID" class="form-select" asp-items="ViewBag.Alunos">
                <option value="">-- Selecione um aluno --</option>
            </select>
            <span asp-validation-for="AlunoID" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="DisciplinaID" class="form-label">Disciplina</label>
            <select asp-for="DisciplinaID" class="form-select" asp-items="ViewBag.Disciplinas">
                <option value="">-- Selecione uma disciplina --</option>
            </select>
            <span asp-validation-for="DisciplinaID" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Salvar</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
    </form>
</div>
