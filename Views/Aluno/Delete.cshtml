@model Aluno

@{
    ViewData["Title"] = "Deleting Page";
}

<div class="text-center">
    <h1 class="display-4">Remover Aluno</h1>
        <div class="mb-3">
        <h1 class="display-4">Quer mesmo remover o aluno (@Model.Nome)?</h1>
        <a type="submit" class="btn btn-danger" asp-controller="Aluno" asp-action="Remove" asp-route-id="@Model.AlunoID">Remover</a>
        <a type="submit" class="btn btn-primary" asp-controller="Aluno" asp-action="Index">Voltar</a>
        </div>
</div>
